{% extends 'base.twig' %}
{% block content %}

	<h1>{{ post.title }}</h1>

	<h2>Basic</h2>
		{% if post.banner_image %}
			<div class="banner">
				<style>
				 	.banner {
					 	background-image: url('{{ Image(post.banner_image).src }}');
					}
					.banner:after {
						background-image: url('{{ Image(post.banner_texture).src }}');
					}
				</style>

				{% if post.banner_text %}
					<span class="headline">{{ post.banner_text }}</span>
				{% endif %}
			</div>
		{% endif %}

{% endblock %}
